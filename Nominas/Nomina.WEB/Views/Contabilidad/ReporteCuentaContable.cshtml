@using Nomina.BLL
@using RH.Entidades
@model List<Empresa>

@{
    var conceptos = ViewBag.conceptos;
}

<div class="col-md-6 col-md-offset-4">
    <h3>Reporte Cuentas Contables</h3>
</div>

<div class="form-horizontal">
    <div class="col-md-12">
        <div class="col-md-4" >
            <div class="form-group">
                <div class="col-md-12">

                    <label>Empresa: </label>
                    <select class="form-control" id="empresa">
                        <option value="0" >Elija una empresa</option>
                        @foreach (var e in Model)
            {
                            <option value="@e.IdEmpresa">@e.RazonSocial</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12" id="clientes">

  
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">

                    <label>Fecha Inicio: </label>
                   <input type="date" id="fechaInicio" class="form-control" />
                </div>
          
                <div class="col-md-6">

                    <label>Fecha Fin: </label>
                    <input type="date" id="fechaFin" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                @*<div class="col-md-6">

                    <label>Finiquito e Indenmizacion: </label>
                    <input type="checkbox" id="finiquito"class="checkbox-inline" />
                </div>*@

                <div class="col-md-6">

                    <label>Por empleado: </label>
                    <input type="checkbox"id="empleado" class="checkbox-inline" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 ">

                    
                    <a class="btn btn-primary" id="consultar">Consultar</a>
                </div>

            </div>
        </div>



        <div class="col-md-8" >
            <div class="col-md-12"  id="periodos">

 
            </div>
        </div>

    </div>
</div>





<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
<script src="//cdn.datatables.net/buttons/1.2.4/js/buttons.html5.min.js"></script>
<script>

  
     
    $("#empresa").change(function () {
        $("#fechaInicio").val('');
        $("#fechaFin").val('');
        $("#periodos").empty();
        var empresa = $('select[id=empresa]').val();
        if (empresa != 0) {
            var request = $.ajax({
                url: "/Contabilidad/tablaCliente",
                method: "POST",
                data:
                    {
                        idEmpresa: empresa
                    },
                beforeSend: function () {
                    waitingDialog.show('Procesando...');
                }
            });

            request.done(function (data) {
                waitingDialog.hide();
                $('#clientes').html(data);
            });
        }
      

    });

    $("#consultar").click(function () {
        var sendData = true;
        var empresa = $('select[id=empresa]').val();
        var cliente = $('select[id=cliente]').val();
        var fechaInicio = $("#fechaInicio").val();
        var fechaFin = $("#fechaFin").val();
    
 


        if (fechaFin === "") {
            sendData = false;
            utils.showMessage("WAR ", "Establesca la fecha fin", 4000, "danger");
            $('#fechaFin').focus();
        }

        if (fechaInicio === "") {
            sendData = false;
            utils.showMessage("WAR ", "Establesca la fecha inicio", 4000, "danger");
            $('#fechaInicio').focus();
        }

        
        if (sendData)
        {
            if (typeof (cliente) === "undefined") {
                cliente = 0;
            }

            console.log(empresa);
            console.log(cliente);
            var request = $.ajax({
                url: "/Contabilidad/tablaPeriodos",
                method: "POST",
                data:
                    {
                        idEmpresa: empresa,
                        idCliente: cliente,
                        fechaInicio: fechaInicio,
                        fechaFin: fechaFin
                    },
                beforeSend: function () {
                    waitingDialog.show('Procesando...');
                }
            });

            request.done(function (data) {
                waitingDialog.hide();
                $('#periodos').html(data);
            });
        }



  
    })

</script>
