<div class="row">
    <div class="col-md-6">
        <table id="tableEmpleadoError" class="display">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    <th>Nombres</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var e in Model)
                    {
                        if(e!= null)
                        { 
                        <tr data-idnomina="@e.IdNomina">
                            <td>@e.IdEmpleado</td>
                            <td>@e.Paterno</td>
                            <td>@e.Materno</td>
                            <td>@e.Nombres</td>
                        </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-info">
                                <strong>Info!</strong> No se encontrarón datos para mostrar.
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
