                                <option value="@e.IdEmpresa"> @e.RazonSocial</option>
                            }


                        </select>
                    </div>

                </div>
                <div class="col-md-12">
                  
                  
                </div>
            </div>
           
        </div>
       
    </div>
    <div class="col-md-12" id="layout" style="margin-left:5px; margin-right:5px;">

    </div>
    }
}



