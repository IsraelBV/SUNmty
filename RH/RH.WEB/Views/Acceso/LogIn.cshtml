
@model RH.WEB.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <link href="~/Content/Login.css" rel="stylesheet">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    @*<link href="~/Content/CSSLocal/461/font-awesome.min.css" rel="stylesheet" />*@
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogIn</title>
</head>

<body>
    <div class="alerta1">
        <span>Los datos ingresados no coinciden como datos válidos. Por favor vuelve a intentarlo.</span>
    </div>
    <div class="alerta2">
        <span>Este usuario no tiene permiso para acceder a la aplicación.</span>
    </div>
    <div class="login-form">
        @*<hr /><h1>Bienvenido<br><small>Recursos Humanos</small></h1><hr />*@<img src="~/Images/letrasfull.png"/>
        <div class="form-group log-status">
            <input type="text" name="Usuario" class="form-control" placeholder="Usuario" id="Usuario" required>
            <i class="fa fa-user"></i>
            
        </div>
        <div class="form-group log-status">
            <input type="password" name="Password" class="form-control" placeholder="Contraseña" id="Contraseña" required>
            <i class="fa fa-lock"></i>
            
        </div>
        <div id="alerta">
            <span class="alert">Usuario o Contraseña Incorrectos</span>
        </div>
        <button type="button" class="log-btn">Entrar</button>
    </div>
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/login.js"></script>
</body>

</html>
