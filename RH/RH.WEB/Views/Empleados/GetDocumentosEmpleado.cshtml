@model List<RH.BLL.Documento>
    @{ 
        List<RH.Entidades.C_DocumentosTipo> tipos = ViewBag.Tipos;
    }

<table class="table">
    <thead>
        <tr>
            
            <th>ID</th>
            <th>Documento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td class="text-right">
                    <a class="btn-table btnDownloadDoc" href="/Empleados/DownloadDocument/?IdDocumento=@item.IdDocumento">
                        <i class="fa fa-arrow-circle-o-down"></i>
                    </a>
                    <button class="btn-table btnDeleteDoc" data-iddocumento="@item.IdDocumento">
                        <i class="fa fa-minus-circle"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="newDocumentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Subir Nuevo Documento</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="Tipo Documento">Tipo de Documento</label>
                            <select class="form-control" name="IdTipoDocumento" id="IdTipoDocumento">
                                @foreach(var tipo in tipos)
                                {
                                    <option value="@tipo.IdTipoDocumento">@tipo.Descripcion</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="document">Subir Archivo</label>
                            <input type="file" class="form-control" id="document" name="document" placeholder="Subir Archivo" accept="application/pdf" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><i><span style="color:red;"> * </span>Recuerda que los documentos tienen que estar en formato PDF</i></label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
               <button type="button" class="btn btn-primary hovernuevo" id="btnUploadDoc">Subir</button>
               <button type="button" class="btn btn-danger hovercancelado" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>