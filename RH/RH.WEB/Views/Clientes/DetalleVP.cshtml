
@using Common.Helpers
@using RH.Entidades
@using RH.BLL
@model List<ClienteEmpresas>

@{
    ViewBag.Title = "Detalle Empresa";
    var cliente = ViewBag.Clientes;
    
    var Depto = ViewBag.SelectListDepto as List<ClienteDepartamentos>;
}
<style>
    .modal-dialog {
        width: 1100px !important;
    }

    .panel-heading {
        color: black !important;
    }

    small {
        font-size: 13.5px;
    }
    div.scroll{
    width: 350px;
    height: 120px;
    overflow-y: scroll;
    }
</style>
<div id="divContenido2">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="fa fa-info-circle fa-lg"></i> Detalle Cliente </h4>
    </div>

    <div class="panel panel-default" id="detail">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label class="col-md-2">Cliente</label>
                        <small class="col-md-4">@cliente</small>

                        <label class="col-md-2">Departamentos</label>
                        <div class="col-md-4 scroll">
                            <ul>
                                @foreach (var a in Depto)
                                {
                                    <li>   <small>@a.NombreDepartamento</small></li>
                                }
                            </ul>
                        </div>


                    </div>
                </div>

         
        </div>
    </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    </div>
</div>
