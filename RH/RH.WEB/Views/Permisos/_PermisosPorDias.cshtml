@using System.Web.Mvc;
@using RH.Entidades;
@using RH.BLL;
@using Common.Helpers;
@model  List<Permisos>
@{  var usuario = SessionHelpers.GetIdUsuario();

    }
<style>
    .modal-dialog {
        width: 1100px !important;
    }
</style>

<div class="tab-content">
        
            <table class="display nowrap  compact procesoNomina" id="tablaPermisosDias" width="100%">
                <thead>
                    <tr>
                        
                       
                        <th autofocus>Fecha Inicio</th>
                        <th>Fecha Final</th>
                        <th>Presentarse</th>
                        <th>Días</th>                       
                        <th>Con Goce</th>
                        <th>Observaciones</th>
                       


                    </tr>
                </thead>
                <tbody>

                    @foreach (var a in Model.Where(s => s.PorHoras == false))
                    {
                        <tr id="@a.IdPermiso" data-id="@a.IdPermiso">
                            @*<td class="text-center"><input type="checkbox" name="input-permisos" value="@a.IdPermiso" id="input@(a.IdPermiso)" /></td>*@                     
                            <td>@a.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@a.FechaFin.ToString("dd/MM/yyyy")</td>
                            <td>@a.Presentarse.ToString("dd/MM/yyyy")</td>
                            <td>@a.Dias</td>
                            <td>
                                @if (a.ConGoce == true)
                                {
                                    <input type="checkbox" checked  />
                                    <input type="hidden" name="input-goce" value="1" id="input@(a.IdPermiso)" />
                                }
                                else
                                {  <input type="checkbox" disabled />
                                <input type="hidden" name="input-goce" value="0" id="input@(a.IdPermiso)" />
                                }
                            </td>
                            <td>@a.Observaciones</td>


                        </tr>
                    }
                </tbody>
            </table>
     
    </div>
